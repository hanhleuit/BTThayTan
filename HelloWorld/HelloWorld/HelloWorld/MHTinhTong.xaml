<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.MHTinhTong"
             Title="Tinh tong">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Man Hinh tinh tong" VerticalOptions="Start" HorizontalOptions="Start"/>
            <Label Text="Nhap so A"/>
            <Entry x:Name="txtsoA" Placeholder=" Nhap so A "/>
            <Label Text="Nhap so B"/>
            <Entry x:Name="txtsoB" Placeholder=" Nhap so B "/>
            <Label Text="Tong:"/>
            <Entry x:Name="txtSum" IsEnabled="False" Placeholder="Tong"/>
            <Button x:Name="cmdTinhTong" Text="Tinh Tong" VerticalOptions="Center" Clicked="cmdTinhTong_Clicked"/>
            <Button x:Name="cmdGoHome" Text="Tro ve trang chu" VerticalOptions="End" HorizontalOptions="End" Clicked="cmdGoHom_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
